<h1>Shipping information</h1>

<div>
  <%= form_tag({:controller => :shipping_labels, :action => :create}) do %>
    <div class="ToAddress">
      <h4>To Address</h4>
      <div>
        <%= label_tag(:to_full_name, "Full Name") %>
        <%= text_field_tag(:to_full_name) %>
      </div>
      <div>
        <%= label_tag(:to_address1, "Address") %>
        <%= text_field_tag(:to_address1) %>
      </div>
      <div>
        <%= label_tag(:to_city, "City") %>
        <%= text_field_tag(:to_city) %>
      </div>
      <div>
        <%= label_tag(:to_state, "State") %>
        <%= text_field_tag(:to_state) %>
      </div>
      <div>
        <%= label_tag(:to_zip, "Zip Code") %>
        <%= text_field_tag(:to_zip) %>
      </div>
    </div>
    <div class="FromAddress">
      <h4>From Address</h4>
      <div>
        <%= label_tag(:from_full_name, "Full Name") %>
        <%= text_field_tag(:from_full_name) %>
      </div>
      <div>
        <%= label_tag(:from_address1, "Address") %>
        <%= text_field_tag(:from_address1) %>
      </div>
      <div>
        <%= label_tag(:from_city, "City") %>
        <%= text_field_tag(:from_city) %>
      </div>
      <div>
        <%= label_tag(:from_state, "State") %>
        <%= text_field_tag(:from_state) %>
      </div>
      <div>
        <%= label_tag(:from_zip, "Zip Code") %>
        <%= text_field_tag(:from_zip) %>
      </div>
    </div>
    <div class="rate">
      <h4>Rate</h4>
      <div>
        <%= label_tag(:weight, "Weight Oz") %>
        <%= text_field_tag(:weight) %>
      </div>
      <div>
        <%= label_tag :package_type, "Type" %>
        <%= text_field_tag :package_type %>
      </div>
    </div>
    <%= submit_tag "Print Label" %>
  <% end %>
</div>
