<%= form_for(@shipping_rate) do |f| %>
  <% if @shipping_rate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shipping_rate.errors.count, "error") %> prohibited this shipping_rate from being saved:</h2>

      <ul>
      <% @shipping_rate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :from_zip_code %><br />
    <%= f.text_field :from_zip_code %>
  </div>
  <div class="field">
    <%= f.label :to_zip_code %><br />
    <%= f.text_field :to_zip_code %>
  </div>
  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </div>
  <div class="field">
    <%= f.label :ship_date %><br />
    <%= f.date_select :ship_date, :start_year => Date.today.year %>
  </div>
  <div class="field">
    <%= f.label :service_type %><br />
    <%= f.select :service_type, Stamps::Types::SERVICE.map { |s| [ s[1], s[0] ] } %>
  </div>
  <div class="field">
    <%= f.label :package_type %><br />
    <%= f.select :package_type, Stamps::Types::PACKAGE %>
  </div>
  <div class="actions">
    <%= f.submit 'Get Rates' %>
  </div>
<% end %>
